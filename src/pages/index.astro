---
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts'

import favicon from './../assets/favicon.svg'

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<!doctype html>
<html lang='es'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				/* 				width: calc(50% - 1rem);*/
				background: #3333330d;
				border: 1px solid #ffffff1f;
				padding: 1rem;
				border-radius: 8px;
				transition: 0.2s ease;

			}
			ul li * {
				text-decoration: none;
			}
			ul li img {
				margin-bottom: 0rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			li hr {
				display: none;
			}
			.title {
				margin: 0;
				color: rgb(var(--titulo));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date,
			ul li a:hover .title {
				color: #ffffff);
			}

			ul li:hover {
				border: 1px solid #ffffff54;
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					background: #f0f0f000;
					border: none;
					width: 100%;
					text-align: left;
				}
				li hr {
					display: block;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<div id='logodefondo'>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 280 280'
					fill='#ffffff'
					><title>NAicon</title><polygon
						points='92 277 117.5 78.5 163 141.5 186.5 3.5 182 216.5 132 153 92 277'
					></polygon></svg
				>
			</div>
			<section>
				<ul>
					{
						posts
							.slice()
							.sort(
								(a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate)
							)
							.map(post => (
								<li>
									<a href={`/${post.id}/`}>
										<h4 class='title'>{post.data.title}</h4>
										<p class='date'>
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
									<hr />
								</li>
							))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
